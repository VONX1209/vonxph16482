<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <title>Hello, world!</title>
</head>
<body>
<h1>Hello, world!</h1>


<form method="post" action="/insertUser" enctype="application/x-www-form-urlencoded">

  <input name="email" placeholder="Nhập email của bạn">

  <input name="maSV" placeholder="Nhập Mã SV của bạn">

  <input name="add" placeholder="Nhập địa chỉ của bạn">

  <input name="khoa" placeholder="Nhập khóa học">

  <button type="submit">Save</button>


</form>

<% if (typeof message != 'undefined')  { %>

  <h1><%= message %></h1>

<% } %>

<div>=====================================================</div>

<% if (typeof data != 'undefined')  { %>


  <% for(var i = 0; i < data.length; i++){ %>

    <!--        <div> <%= data[i]._id %></div>-->
    <div> Email:  <%= data[i].email %></div>
    <div> Mã SV: <%= data[i].maSV %></div>
    <div> Địa chỉ:  <%= data[i].add %></div>
    <div> Khóa học:  <%= data[i].khoa %></div>
    <!--form xoa-->
    <form method="get" action="/xoa">
      <input name="id" value="<%= data[i]._id %>" hidden>
      <button type="submit">Delete</button>
    </form>

    <!--form sua-->
    <form method="get" action="/sua">
      <input name="id" value="<%= data[i]._id %>" hidden>
      <button type="submit">Update</button>
    </form>

    <!--form sua-->
    <form method="get" action="/chitiet">
      <input name="id" value="<%= data[i]._id %>" hidden>
      <button type="submit">Xem Chi Tiet</button>
    </form>


    <div>=====================================</div>

  <% } %>

<% } %>

